{
  "private": true,
  "packageManager": "bun@1.3.4",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "format": "prettier --write .",
    "test": "vitest",
    "clean:soft": "rm -rf node_modules examples/*/{node_modules,.output,tsconfig.tsbuildinfo} packages/*/node_modules && bun install",
    "clean:hard": "rm -rf node_modules examples/*/{node_modules,.output,tsconfig.tsbuildinfo} packages/*/node_modules bun.lock && bun install"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
